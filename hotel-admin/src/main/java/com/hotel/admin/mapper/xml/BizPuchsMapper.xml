<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hotel.admin.mapper.BizPuchsMapper">

  <resultMap id="BaseResultMap" type="com.hotel.admin.model.BizPuchs">
  	<id column="id" jdbcType="BIGINT" property="id" />
	<result column="order_code" jdbcType="VARCHAR" property="orderCode" />
	<result column="room_code" jdbcType="VARCHAR" property="roomCode" />
  	<result column="confirm_date" jdbcType="TIMESTAMP" property="confirmTime" />
	<result column="in_date" jdbcType="TIMESTAMP" property="inDate" />
	<result column="out_date" jdbcType="TIMESTAMP" property="outDate" />
	<result column="p_name" jdbcType="VARCHAR" property="pName" />
	<result column="passport" jdbcType="VARCHAR" property="passport" />
	<result column="birth" jdbcType="VARCHAR" property="birth" />
	<result column="phone" jdbcType="VARCHAR" property="phone" />
	<result column="email_address" jdbcType="VARCHAR" property="emailAddress" />
	<result column="a_num" jdbcType="INTEGER" property="aNum" />
	<result column="b_num" jdbcType="INTEGER" property="bNum" />
	<result column="c_num" jdbcType="INTEGER" property="cNum" />
	<result column="room_num" jdbcType="INTEGER" property="roomNum" />
	<result column="currency" jdbcType="VARCHAR" property="currency" />
	<result column="total_s_amount" jdbcType="DOUBLE" property="totalSAmount" />
	<result column="remark" jdbcType="VARCHAR" property="remark" />
	<result column="status" jdbcType="VARCHAR" property="status" />
  	<result column="hotel_name" jdbcType="VARCHAR" property="hotelName" />
	<result column="create_by" jdbcType="VARCHAR" property="createName" />
	<result column="create_time" jdbcType="VARCHAR" property="createTime" />
	<result column="last_update_by" jdbcType="VARCHAR" property="updateName" />
	<result column="last_update_time" jdbcType="VARCHAR" property="updateTime" />
  </resultMap>

	<sql id="where_query">
		<where>
			<if test="orderCode != null and orderCode != ''">
				AND order_code = #{orderCode}
			</if>
			<if test="roomStatus != null and roomStatus != ''">
				AND status = #{roomStatus}
			</if>
			<if test="createTimeEnd != null and createTimeEnd != ''">
				AND create_time &lt;= #{createTimeEnd}
			</if>
			<if test="createTimeStart != null and createTimeStart != ''">
				AND create_time >= #{createTimeStart}
			</if>
			<if test="confirmTimeEnd != null and confirmTimeEnd != ''">
				AND order_code &lt;= #{confirmTimeEnd}
			</if>
			<if test="confirmTimeStart != null and confirmTimeStart != ''">
				AND order_code >= #{confirmTimeStart}
			</if>
			<if test="hotelName != null and hotelName != ''">
				AND hotelName = #{hotelName}
			</if>
		</where>
	</sql>

	<select id="findPage" resultMap="BaseResultMap">
		select * from biz_puchs <include refid="where_query"/>
	</select>


</mapper>