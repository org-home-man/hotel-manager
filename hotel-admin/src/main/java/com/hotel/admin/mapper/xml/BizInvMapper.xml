  <select id="findByRoomCode" parameterType="com.hotel.admin.model.BizInv" resultMap="BaseResultMap">
    select * from biz_inv
    where room_code = #{roomCode,jdbcType=VARCHAR} AND inv_date = #{invDate,jdbcType=VARCHAR}
  </select>
  
  <select id="findPage" resultMap="BaseResultMap">
    select * from biz_inv
  </select>

  <select id="queryById" parameterType="java.lang.String" resultMap="BaseResultMap">
    select
    room_code,
    inv_date,
    inventory
    from biz_inv
    where room_code = #{roomCode,jdbcType=VARCHAR} ORDER BY inv_date
  </select>
  <select id="findCancelBizInv" resultType="com.hotel.admin.model.BizInv">
    select * from biz_inv
    where room_code = #{roomCode,jdbcType=VARCHAR} AND inv_date >= #{inDate} AND inv_date &lt; #{outDate}
  </select>

