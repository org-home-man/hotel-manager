  <select id="findPageByPara" parameterType="com.hotel.admin.dto.HotelRoomQry" resultMap="BaseResultMap">
    SELECT distinct
        <include refid="br_hotel_sql"/>,
        <include refid="br_price_sql"/>,
        <include refid="br_room_ext_sql"/>,
        <include refid="br_room_sql"/>
    FROM
        biz_hotl bh
        JOIN biz_room br ON bh.hotel_code = br.hotel_code
        JOIN biz_room_ext bre ON br.room_code = bre.room_code
        JOIN biz_prise bp ON br.room_code = bp.room_code
        JOIN biz_inv bi ON br.room_code = bi.room_code
